<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
	<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>	
  </PropertyGroup>
  
  <!-- NuGet configuration-->
  <Import Project="..\NuGet.targets" />
  <PropertyGroup>
	<PackageVersion>1.2.3</PackageVersion>
	<Description>HAVIT .NET Framework Extensions - Basic Class Library (Havit.dll)</Description>
	<PackageTags>HAVIT Framework Library</PackageTags>
  </PropertyGroup>  
  
  <ItemGroup>
	<Compile Include="..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Web" Condition="'$(TargetFramework)' == 'net46'" />
	<Reference Include="System.Windows.Forms" Condition="'$(TargetFramework)' == 'net46'" />
  </ItemGroup>
  
</Project>
