<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\Common.targets" />
  
  <PropertyGroup>
	<TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  
  <!-- NuGet -->
  <PropertyGroup>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageVersion>1.8.4</PackageVersion>
	<Description>HAVIT .NET Framework Extensions - Basic Class Library</Description>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Web" Condition="'$(TargetFramework)' == 'net46'" />
	<Reference Include="System.Windows.Forms" Condition="'$(TargetFramework)' == 'net46'" />
  </ItemGroup>
  
</Project>
