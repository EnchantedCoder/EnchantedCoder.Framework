	</PropertyGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Havit.GoogleAnalytics.Tests" />
	</ItemGroup>

	<!-- NuGet -->
	<Import Project="../NuGet.targets" />
	<PropertyGroup>
		<PackageVersion>2.0.4</PackageVersion>
		<Description>HAVIT .NET Framework Extensions - Google Analytics Client Library</Description>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Havit.Core\Havit.Core.csproj" />
