<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<!-- BLG, přestože sám je implementován v .NET Frameworku 4.7.1 chceme umožnit nainstalovat i do projektů targetující starší frameworky. -->
    <TargetFramework>net46</TargetFramework>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageId>Havit.Business.BLGenerator</PackageId>
	<PackageVersion>1.7.14</PackageVersion>
	<Description>HAVIT .NET Framework Extensions - Business Layer - Code Generator</Description>
	<!-- Publikujeme výstup buildu jiného projektu. -->
	<IncludeBuildOutput>false</IncludeBuildOutput>
	<!-- Výstup je publikován jako content, musíme jeho publikaci povolit. -->
	<IncludeContentInPack>true</IncludeContentInPack>
  </PropertyGroup>
  
  <ItemGroup>
	<Content Include="..\Havit.Business.BusinessLayerGenerator\bin\$(Configuration)\net471\**">
	  <Pack>true</Pack>
	  <PackagePath>tools\BLG</PackagePath>
	</Content>
  </ItemGroup>
  
</Project>
