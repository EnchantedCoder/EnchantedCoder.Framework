<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net7.0</TargetFramework>
		<AssemblyName>EnchantedCoder.HangfireApp</AssemblyName>
		<RootNamespace>EnchantedCoder.HangfireApp</RootNamespace>

	</PropertyGroup>

	<ItemGroup>
		<None Remove="appsettings.HangfireApp.Development.json" />
		<None Remove="appsettings.HangfireApp.json" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="appsettings.HangfireApp.Development.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="appsettings.HangfireApp.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Hangfire.AspNetCore" Version="1.8.5" />
		<PackageReference Include="Hangfire.Console" Version="1.4.2" />
		<PackageReference Include="Hangfire.Console.Extensions" Version="1.0.5" />
		<PackageReference Include="Hangfire.SqlServer" Version="1.8.5" />
		<PackageReference Include="Microsoft.ApplicationInsights.WorkerService" Version="2.21.0" />
		<PackageReference Include="Microsoft.Azure.WebJobs" Version="3.0.37" />
		<PackageReference Include="Microsoft.Data.SqlClient" Version="5.1.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\HangfireJobs\HangfireJobs.csproj" />
		<ProjectReference Include="..\EnchantedCoder.ApplicationInsights.DependencyCollector\EnchantedCoder.ApplicationInsights.DependencyCollector.csproj" />
		<ProjectReference Include="..\EnchantedCoder.AspNetCore\EnchantedCoder.AspNetCore.csproj" />
		<ProjectReference Include="..\EnchantedCoder.Core\EnchantedCoder.Core.csproj" />
		<ProjectReference Include="..\EnchantedCoder.Hangfire.Extensions\EnchantedCoder.Hangfire.Extensions.csproj" />
	</ItemGroup>

</Project>
