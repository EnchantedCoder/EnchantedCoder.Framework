<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net45</TargetFramework>
    <RootNamespace>Havit.Data.Entity.Glimpse</RootNamespace>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
    <!-- Glimpse ke obsolete, již nepublikujeme nové verze. -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageVersion>1.7.1</PackageVersion>
    <IncludeContentInPack>true</IncludeContentInPack>
    <Description>HAVIT .NET Framework Extensions - Entity Framework 6 Extensions - Plugin for Glimpse</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="EntityFramework" Version="6.1.3" />
    <PackageReference Include="Glimpse" Version="1.8.6" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Package\tools\**\*.*" PackagePath="tools" />
        <!-- Glimpse ke obsolete, již nepublikujeme nové verze. -->
<Content Include="Package\content\**\*.*" PackagePath="content" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Web" Pack="false" />
  </ItemGroup>
</Project>
