<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>net46</TargetFramework>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
	<RootNamespace>Havit.Data.Entity</RootNamespace>
	<NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageVersion>2.0.0</PackageVersion>
	<Description>HAVIT .NET Framework Extensions - Entity Framework 6 Extensions</Description>
  </PropertyGroup>
  
  <ItemGroup>
	<PackageReference Include="ConfigureAwaitChecker.Analyzer" Version="2.0.1" PrivateAssets="all" />
	<PackageReference Include="EntityFramework" Version="6.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Havit.Model\Havit.Model.csproj" />
    <ProjectReference Include="..\Havit\Havit.csproj" />
  </ItemGroup>
</Project>
